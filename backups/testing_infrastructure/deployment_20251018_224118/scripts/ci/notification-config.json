{
  "github": {
    "enabled": true,
    "create_issues_on_failure": true,
    "labels": ["bug", "ci-failure", "automated"],
    "assignees": [],
    "close_on_success": false
  },
  "slack": {
    "enabled": false,
    "channel": "#ci-notifications",
    "notify_on_success": false,
    "notify_on_failure": true,
    "mention_on_failure": ["@channel"],
    "thread_failures": true
  },
  "email": {
    "enabled": false,
    "recipients": [],
    "smtp_server": "smtp.gmail.com",
    "smtp_port": 587,
    "use_tls": true,
    "subject_prefix": "[DupFinder CI]"
  },
  "teams": {
    "enabled": false,
    "webhook_url": "",
    "notify_on_success": false,
    "notify_on_failure": true
  },
  "discord": {
    "enabled": false,
    "webhook_url": "",
    "notify_on_success": false,
    "notify_on_failure": true
  },
  "filters": {
    "min_failures_for_notification": 1,
    "ignore_flaky_tests": true,
    "notification_cooldown_minutes": 60,
    "only_notify_on_new_failures": false
  },
  "formatting": {
    "max_failures_in_summary": 5,
    "truncate_error_messages": 200,
    "include_performance_metrics": true,
    "include_coverage_info": true
  }
}