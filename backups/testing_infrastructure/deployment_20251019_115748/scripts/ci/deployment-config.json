{
  "quality_gates": {
    "min_coverage_percentage": 85.0,
    "max_failed_tests": 0,
    "max_critical_issues": 0,
    "max_performance_regression": 10.0,
    "require_security_scan": true,
    "require_manual_approval": false,
    "min_quality_score": 90.0
  },
  "deployment_windows": {
    "allowed_days": ["monday", "tuesday", "wednesday", "thursday"],
    "allowed_hours": {
      "start": 9,
      "end": 17
    },
    "timezone": "UTC",
    "emergency_override": true,
    "maintenance_windows": [
      {
        "start": "02:00",
        "end": "04:00",
        "description": "Daily maintenance window"
      }
    ]
  },
  "environments": {
    "staging": {
      "quality_gates": {
        "min_coverage_percentage": 80.0,
        "max_failed_tests": 2,
        "require_manual_approval": false
      },
      "deployment_windows": {
        "allowed_days": ["monday", "tuesday", "wednesday", "thursday", "friday"],
        "allowed_hours": {
          "start": 8,
          "end": 20
        }
      }
    },
    "production": {
      "quality_gates": {
        "min_coverage_percentage": 85.0,
        "max_failed_tests": 0,
        "require_manual_approval": true,
        "require_security_scan": true
      },
      "deployment_windows": {
        "allowed_days": ["tuesday", "wednesday", "thursday"],
        "allowed_hours": {
          "start": 10,
          "end": 16
        }
      }
    }
  },
  "rollback_criteria": {
    "error_rate_threshold": 5.0,
    "response_time_threshold": 2000,
    "monitoring_duration": 300,
    "auto_rollback_enabled": true,
    "rollback_approval_required": false
  },
  "notifications": {
    "slack_webhook": "",
    "email_recipients": [],
    "github_create_issue": true,
    "teams_webhook": "",
    "discord_webhook": "",
    "notification_levels": {
      "deployment_blocked": ["slack", "email", "github"],
      "deployment_approved": ["slack"],
      "deployment_failed": ["slack", "email", "github"],
      "rollback_triggered": ["slack", "email", "github"]
    }
  },
  "approval_workflows": {
    "production": {
      "required_approvers": 2,
      "approver_groups": ["senior-developers", "devops", "qa-leads"],
      "approval_timeout_hours": 24,
      "auto_approve_conditions": {
        "hotfix_branch": true,
        "security_patch": true,
        "quality_score_threshold": 95.0
      }
    },
    "staging": {
      "required_approvers": 1,
      "approver_groups": ["developers", "qa"],
      "approval_timeout_hours": 4
    }
  },
  "monitoring": {
    "health_check_endpoints": [
      "/health",
      "/api/status"
    ],
    "metrics_endpoints": [
      "/metrics",
      "/api/metrics"
    ],
    "post_deployment_monitoring": {
      "duration_minutes": 30,
      "check_interval_seconds": 60,
      "failure_threshold": 3
    }
  },
  "database_path": "./deployment-gates.db",
  "logging": {
    "level": "INFO",
    "file": "./deployment-gate.log",
    "max_size_mb": 100,
    "backup_count": 5
  }
}