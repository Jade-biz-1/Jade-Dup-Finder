{
  "_comment": "Windows 64-bit build profile for MSVC toolchain with NVIDIA CUDA GPU acceleration",
  "_description": "This profile builds DupFinder for Windows x64 using Visual Studio 2022 MSVC compiler with CUDA GPU support",
  "_local_setup_notes": [
    "IMPORTANT: Update paths below to match YOUR local installation",
    "See LOCAL_SETTINGS.md for this machine's configuration",
    "",
    "Key paths to verify:",
    "1. setup_scripts: Path to vcvars64.bat (sets up MSVC environment)",
    "2. Qt6_DIR: Your Qt 6.9.3 MSVC installation folder",
    "3. CUDA_PATH: Your CUDA 12.5 installation root",
    "4. path: CUDA bin directory (for nvcc compiler)",
    "",
    "GPU Requirements:",
    "  - NVIDIA GPU with CUDA support",
    "  - CUDA Toolkit 12.5 fully installed",
    "  - Verify with: nvidia-smi and nvcc --version"
  ],
  "targets": [
    {
      "id": "windows-msvc-cuda",
      "display_name": "Windows 64-bit (MSVC 2019, CUDA GPU build)",
      "os": "Windows",
      "arch": ["x86_64", "amd64"],
      "requires_gpu": true,
      "generator": "Visual Studio 16 2019",
      "architecture": "x64",
      "multi_config": true,
      "setup_scripts": [
        "C:\\Program Files (x86)\\Microsoft Visual Studio\\2019\\Community\\VC\\Auxiliary\\Build\\vcvars64.bat"
      ],
      "environment": {
        "Qt6_DIR": "C:\\Qt\\6.9.3\\msvc2022_64",
        "CUDA_PATH": "C:\\Program Files\\NVIDIA GPU Computing Toolkit\\CUDA\\v12.5",
        "PATH": "C:\\Program Files\\NVIDIA GPU Computing Toolkit\\CUDA\\v12.5\\bin;%PATH%"
      },
      "path": [
        "C:\\Program Files\\NVIDIA GPU Computing Toolkit\\CUDA\\v12.5\\bin"
      ],
      "cmake_args": [
        "-DDUPFINDER_BUILD_VARIANT=gpu",
        "-DDUPFINDER_PACKAGE_SUFFIX=win64-msvc-cuda",
        "-DENABLE_GPU_ACCELERATION=ON",
        "-DDUPFINDER_WARNINGS_AS_ERRORS=OFF",
        "-DQT_FORCE_MIN_CMAKE_VERSION_FOR_USING_QT=3.20",
        "-DCMAKE_CUDA_COMPILER=C:\\Program Files\\NVIDIA GPU Computing Toolkit\\CUDA\\v12.5\\bin\\nvcc.exe"
      ],
      "default_build_type": "Release",
      "supported_build_types": ["Debug", "Release"],
      "artifact_extensions": [".exe"],
      "dist": {
        "subdir": ["Win64", "{build_type}"]
      },
      "notes": "Requires NVIDIA CUDA 12.5 toolkit with nvcc and nvidia-smi. GPU-accelerated hash calculations provide 4-10x speedup over CPU."
    }
  ]
}
